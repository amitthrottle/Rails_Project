<h1>Listing orders</h1>

<table class="common-table">
  <thead>
  <tr>
    <th>Doctor_Id</th>
    <th>Name</th>
    <th>Specialisation</th>
    <th>Start Time</th>
    <th>End Time</th>
    <th colspan="3"><b>Update Options</b></th>
  </tr>
  </thead>

<% @doctors.each do |doctor| %>
<tbody>
  <tr>
    <td><%= doctor.id %></td>
    <td><%= doctor.name %></td>
    <td><%= doctor.specialisation %></td>
    <td><%= doctor.start_time %></td><td><%= doctor.end_time %></td>
    <td><%= link_to 'Show', doctor, class: "btn btn-primary btn-sm" %></td>
    <td><%= link_to 'Edit', edit_doctor_path(doctor), class: "btn btn-primary btn-sm"  %></td>
    <td><%= link_to 'Destroy', doctor, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary btn-sm"  %></td>
  </tr>
  </tbody>
<% end %>
</table>

<br />

<%= link_to 'Add new doctor', new_doctor_path, class: "btn btn-link"  %>
